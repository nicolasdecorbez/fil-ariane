<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->

    <View
        android:layout_width="150dp"
        android:layout_height="3dp"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="true"
        android:background="#ECCC70"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="728dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="703dp"
        android:fontFamily="@font/autour_one"
        android:text="@string/notif_item"
        android:textColor="#EED082"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_bar"
        tools:ignore="MissingConstraints" />

    <Switch
        android:id="@+id/switch_notif_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/autour_one"
        android:text="@string/notif_message_off"
        android:textColor="#EED082" />

    <Switch
        android:id="@+id/switch_notif_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/switch_notif_message"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/autour_one"
        android:text="@string/notif_update_off"
        android:textColor="#EED082" />

    <Switch
        android:id="@+id/switch_notif_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/switch_notif_update"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/autour_one"
        android:textColor="#EED082"
        android:text="@string/notif_friend_off"
        />


</RelativeLayout>